<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.bumiputerasyariah.asuransiready">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Homepage" />
        <activity
            android:name=".PageAsuransiPerjalanan"
            android:label="Asuransi Perjalanan"
            android:parentActivityName=".Homepage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Homepage" />
        </activity>
        <activity android:name=".PageAsuransiMobile"
            android:label="Asuransi Mobil"
            android:parentActivityName=".Homepage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Homepage" />
        </activity>
        <activity android:name=".PageAsuransiKesehatan"
            android:label="Asuransi Kesehatan"
            android:parentActivityName=".Homepage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Homepage" />
        </activity>
        <activity android:name=".PageAsuransiJiwaBerjangka"
            android:label="Asuransi Jiwa Berjangka"
            android:parentActivityName=".Homepage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Homepage" />
        </activity>
        <activity android:name=".Login"></activity>
    </application>

</manifest>
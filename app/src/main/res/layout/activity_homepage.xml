<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </include>

    <RelativeLayout
        android:layout_below="@id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:orientation="vertical"
            android:id="@+id/mainGrid"
            android:rowCount="3"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_centerHorizontal="true"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:weightSum="2"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_weight="1"
                    android:id="@+id/cvasuransiperjalanan"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="220dp"
                    android:layout_gravity="left"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/business"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="90dp" />
                        <TextView
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="Asuransi Perjalanan"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="5dp"
                            android:text="Pastikan perjalanan Anda aman dan tenang dengan manfaat kehilangan bagasi, pembatalan perjalan dan biaya medis di perjalanan."
                            android:textAlignment="center"
                            android:textColor="@color/colorTextDetail"
                            android:textSize="12sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_weight="1"
                    android:id="@+id/cvasuransimobil"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="220dp"
                    android:layout_gravity="left"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/insurance"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="90dp" />
                        <TextView
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="Asuransi Mobil"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="5dp"
                            android:text="Jaminan perlindungan kendaraan bermotor atas kerusakan akibat banjir, kecelakaan di jalan hingga kehilangan mobil."
                            android:textAlignment="center"
                            android:textColor="@color/colorTextDetail"
                            android:textSize="12sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_weight="1"
                    android:id="@+id/cvasuransikesehatan"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="220dp"
                    android:layout_gravity="left"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/shield"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="90dp" />
                        <TextView
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="Asuransi Kesehatan"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="5dp"
                            android:text="Perlindungan optimal bagi Anda beserta manfaat biaya rawat inap, cacat permanen hingga santunan meninggal dunia."
                            android:textAlignment="center"
                            android:textColor="@color/colorTextDetail"
                            android:textSize="12sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/cvasuransijiwaberlangka"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="220dp"
                    android:layout_gravity="left"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/edit"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="90dp" />
                        <TextView
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="Asuransi Jiwa Berlangka"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="5dp"
                            android:text="Tentukan jangka waktu Asuransi Jiwa Anda untuk perlindungan dan kepastian masa depan Anda bersama keluarga."
                            android:textAlignment="center"
                            android:textColor="@color/colorTextDetail"
                            android:textSize="12sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageAsuransiKesehatan">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </include>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="7dp"
            android:layout_below="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Mohon isi informasi Anda untuk mendapatkan penawaran harga premi yang akurat."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:id="@+id/lay5"
                android:layout_below="@+id/lay1"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextDetail"
                    android:text="Tanggal Lahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:hint="08"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:id="@+id/spbulan"
                        android:entries="@array/bulanentri"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Spinner>
                    <EditText
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:hint="2001"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:id="@+id/lay6"
                android:layout_below="@+id/lay5"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextDetail"
                    android:text="Manfaat Harian Rawat Inap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spmanfaat"
                    android:entries="@array/manfaatharianrawatinap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:id="@+id/lay7"
                android:layout_below="@+id/lay6"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:background="#bbb"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <TextView
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                    android:textColor="@color/colorTextDetail"
                    android:text="Filter Lanjutan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:background="#bbb"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="30dp"
                android:orientation="horizontal"
                android:id="@+id/lay8"
                android:layout_below="@+id/lay7"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnCari"
                    android:background="@drawable/button_search"
                    android:text="Cari Asuransi"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnreset"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_reset"
                    android:text="Reset"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>